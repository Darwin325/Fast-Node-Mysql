<div class="container p-4">
   <div class="row">
      <div class="col-md-4 mx-auto">
         <div class="card">
            <div class="card-body">
               <form action="/links/edit/{{ link.id }}" method="POST">
                  <input type="hidden" name="id" value="{{ link.id }}">
                  <div class="form-group">
                     <input type="text" class="form-control" value="{{ link.title }}" name="title" placeholder="Title"
                        autofocus>
                  </div>
                  <div class="form-group">
                     <input type="url" class="form-control" value="{{ link.url }}" name="url" placeholder="Url">
                  </div>
                  <div class="form-group">
                     <textarea name="description" cols="30" rows="2" class="form-control"
                        placeholder="Description">{{ link.description }}</textarea>
                  </div>
                  <div class="form-group">
                     <button class="btn btn-success btn-block">
                        Edit
                     </button>
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
</div>